+/* body */
+body {
+    width: 100%;
+    height: 100%;
+    margin: 0;
+    padding: 0;
+    overflow-x: hidden;
+    background-color: black;
+}
+
+/* main section */
+#main {
+    width: 100%;
+    height: 100vh;
+    box-sizing: border-box;
+    background-color: #FFFFFF;
+    font-family: 'Open Sans', sans-serif;
+    position: relative;
+}
+
+
+nav {
+    display: flex;
+    justify-content: space-between;
+    align-items: center;
+    text-transform: uppercase;
+    font-weight: 600;
+    letter-spacing: 2px;
+    position: fixed;
+    top: 0;
+    left: 0;
+    width: 100%;
+    box-sizing: border-box;
+    padding: 10px 100px;
+    background-color:#F9F2ED;
+    box-shadow: 2px 2px 12px rgba(0,0,0,0.5);
+    z-index: 1;
+}
+
+
+nav .logo {
+    height: 30px;
+}
+
+.menu {
+    display: flex;
+    list-style: none;
+}
+
+.menu li a{
+    padding: 10px 15px;
+    color: #292929;
+    font-size: 12px;
+    font-weight: 700;
+    transition: all ease 0.3s;
+}
+
+.menu li a:hover,
+.menu .active {
+    background-color: #292929;
+    color: #F4F7FF;
+    text-decoration: none;
+}
+
+.title {
+    width: 600px;
+    position: absolute;
+    left: 20%;
+    top: 35%;
+    transform: translate(-20%, 50%);
+}
+
+.title p:nth-child(1),
+.title .details, .about-text p {
+    color: #292929;
+    font-size: 16px;
+}
+
+.title h1, .about-text h1 {
+    font-size: 40px;
+    color:#292929 ;
+    margin: 0 0 16px 0;
+    letter-spacing: 3px;
+
+}
+
+.title span {
+    font-family: 'Libre Baskerville', serif;
+}
+
+.cv-btn {
+    width: 200px;
+    height: 45px;
+    display: flex;
+    justify-content: center;
+    align-items: center;
+    background-color: #292929;
+    color: #FFFFFF;
+}
+
+.cv-btn:hover {
+    background-color: #131313;
+    transition: all ease 0.5s;
+}
+
+.mePhoto {
+    position: absolute;
+    top: 20%;
+    left: 65%;
+    height: 80%;
+}
+
+
+/* About Section*/
+
+#about {
+    width: 100%;
+    height: 100vh;
+    box-sizing: border-box;
+    background-color: #3AB0FF;
+    font-family: 'Open Sans', sans-serif;
+    position: relative;
+
+}
+
+.about-text {
+    width: 30%;
+    position: absolute;
+    top: 20%;
+    left: 20%;
+    transform: translate(-20%, 50%);
+
+}
+
+.about-text h2 {
+    color: #FFB562;
+}
+
+#about-carousel {
+    position: absolute;
+    top: 8%;
+    left: 55%;
+    width: 40%;
+    padding: 8% 10%;
+    text-align: center;
+
+}
+
+#about-carousel h3 {
+    margin-top: 15%;
+    margin-bottom: 0;
+    letter-spacing: 3px;
+    color: #292929;
+    font-weight: 300;
+}
+
+#about-carousel .carousel-img {
+    position: relative;
+    width: 60%;
+    float: top;
+    display: block;
+    margin: 8% 20%;
+
+}
+
+#about-carousel .carousel-sub-img{
+    width: 30%;
+    padding: 0 5%;
+}
